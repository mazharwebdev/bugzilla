<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @project.title %>
</p>

<p>
  <strong>Description:</strong>
  <%= @project.description %>
</p>
<% if current_user.role == "manager" %>
<%= link_to 'Edit', edit_project_path(@project) %> |
<% end %>
<%= link_to 'Back', projects_path %>

<hr>
<hr>
<h3> Bugs of this Project </h3>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <%  @bugs.each do |bug| %>
      <tr>
        <td><%= bug.title.capitalize %></td>
        <td><%= bug.description %></td>

      </tr>
    <% end %>
  </tbody>
<table>
<hr>
<hr>
<%= link_to "New Bug", new_bug_path %>

